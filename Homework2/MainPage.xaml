        BackgroundColor="White"
        Opacity=".4" 
        FontSize="Large"    
        Text="8"
        Grid.Row="1"
        Grid.Column="1"
     />
     <Button
        Clicked="Handle_Clicked"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
