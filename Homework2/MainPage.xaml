     <Button
        Clicked="Handle_Clicked"    
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        TextColor="Black" 
        BackgroundColor="White"
        Opacity=".4"
        FontSize="Large"    
        Text="5"
        Grid.Row="2"
        Grid.Column="1"
     />
     <Button
        Clicked="Handle_Clicked"    
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        TextColor="Black" 
        BackgroundColor="White"
        Opacity=".4"
        FontSize="Large"    
        Text="6"
        Grid.Row="2"
        Grid.Column="2"
     />
     <Button
        Clicked="op_Clicked"    
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        TextColor="Black" 
        BackgroundColor="White"
        Opacity=".4"
        FontSize="Large"
        Text="x"
        Grid.Row="2"
        Grid.Column="3"
     />
