        Clicked="Handle_Clicked"   
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        TextColor="Black" 
        BackgroundColor="White"
        Opacity=".4"
        FontSize="Large"    
        Text="0"
        Grid.Row="4"
        Grid.Column="0"
        Grid.ColumnSpan="3"
     />
