        Clicked="Handle_Clicked"    
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        TextColor="Black" 
        BackgroundColor="White"
        Opacity=".4"
        FontSize="Large"
        Text="1"
        Grid.Row="3"
        Grid.Column="0"
     />
     <Button
        Clicked="Handle_Clicked"    
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        TextColor="Black" 
        BackgroundColor="White"
        Opacity=".4"
        FontSize="Large"    
        Text="2"
        Grid.Row="3"
        Grid.Column="1"
     />
