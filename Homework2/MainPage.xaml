        Clicked="op_Clicked"    
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        TextColor="Black" 
        BackgroundColor="White"
        Opacity=".4"
        FontSize="Large"    
        Text="+"
        Grid.Row="4"
        Grid.Column="3"
     />
         <Button
        Clicked="Clear_Clicked"   
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        TextColor="Black" 
        BackgroundColor="White"
        Opacity=".4"
        FontSize="Large"    
        Text="C"
        Grid.Row="5"
        Grid.Column="0"
     />
         <Button
        Clicked="Equal_Clicked"   
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        TextColor="Black" 
        BackgroundColor="White"
        Opacity=".4"
        FontSize="Large"    
        Text="="
        Grid.Row="5"
        Grid.Column="1"
        Grid.ColumnSpan="3"
     />
           
