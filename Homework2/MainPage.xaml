        BackgroundColor="White"
        Opacity=".4"
        FontSize="Large"    
        Text="3"
        Grid.Row="3"
        Grid.Column="2"
     />
     <Button 
        Clicked="op_Clicked"    
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        TextColor="Black" 
        BackgroundColor="White"
        Opacity=".4"
        FontSize="Large"    
        Text="-"
        Grid.Row="3"
        Grid.Column="3"
