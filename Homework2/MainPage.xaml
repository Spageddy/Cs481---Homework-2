        BackgroundColor="White"
        Opacity=".4"
        FontSize="Large"    
        Text="9"
        Grid.Row="1"
        Grid.Column="2"
     />
     <Button
        Clicked="op_Clicked"    
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        TextColor="Black" 
        BackgroundColor="White"
        Opacity=".4"   
        FontSize="Large"
        Text="/"
        Grid.Row="1"
        Grid.Column="3"
     />
     <Button
        Clicked="Handle_Clicked"    
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        TextColor="Black" 
        BackgroundColor="White"
        Opacity=".4"
        FontSize="Large"
        Text="4"
        Grid.Row="2"
        Grid.Column="0"
        
